# Application
APP_NAME=StakeFlow Backend
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Blockchain Configuration
# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ETHEREUM_CHAIN_ID=1
ETHEREUM_STAKING_CONTRACT=0x...
ETHEREUM_REWARD_TOKEN=0x...

# Arbitrum
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
ARBITRUM_CHAIN_ID=42161
ARBITRUM_STAKING_CONTRACT=0x...
ARBITRUM_REWARD_TOKEN=0x...

# Base
BASE_RPC_URL=https://mainnet.base.org
BASE_CHAIN_ID=8453
BASE_STAKING_CONTRACT=0x...
BASE_REWARD_TOKEN=0x...

# Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY
SEPOLIA_CHAIN_ID=11155111
SEPOLIA_STAKING_CONTRACT=0x...
SEPOLIA_REWARD_TOKEN=0x...

# Default chain for operations
DEFAULT_CHAIN=sepolia

# Database
DATABASE_URL=sqlite+aiosqlite:///./stakeflow.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/stakeflow

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# Indexing
INDEXER_BATCH_SIZE=1000
INDEXER_POLL_INTERVAL=15
INDEX_START_BLOCK=0

# Security
API_KEY_HEADER=X-API-Key
ALLOWED_API_KEYS=your-api-key-here,another-key

# Monitoring
SENTRY_DSN=
METRICS_ENABLED=true
